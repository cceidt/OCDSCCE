var map = function () {
    var key = {
        name: this.procurement_type,
    };
    var value = {
        count:1
    };
    emit(key, value);
}


var reduce = function (key, values) {
   var result = { count: 0 };
    values.forEach(function (value) {
        result.count += value.count;
    });
    return result;

   }
db.packagemetadata.mapReduce(map,reduce,{out:'procurement_type'});